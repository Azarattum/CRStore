{
  "name": "crstore",
  "version": "0.4.1",
  "description": "Conflict-free replicated svelte store.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Azarattum/CRStore"
  },
  "author": {
    "name": "Azarattum",
    "homepage": "https://github.com/Azarattum"
  },
  "keywords": [
    "store",
    "svelte",
    "sync",
    "conflict free",
    "CRDT",
    "sqlite",
    "crsqlite",
    "kysely",
    "trpc"
  ],
  "scripts": {
    "postinstall": "ncp node_modules/@vlcn.io/wa-crsqlite/dist/wa-sqlite-async.wasm static/sqlite.wasm",
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "test": "vitest",
    "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.2",
    "@sveltejs/kit": "1.3.10",
    "@sveltejs/package": "1.0.2",
    "@trpc/client": "^10.10.0",
    "@trpc/server": "^10.10.0",
    "@types/better-sqlite3": "^7.6.3",
    "@types/ws": "^8.5.4",
    "ncp": "^2.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-svelte": "^2.9.0",
    "superstruct": "^1.0.3",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4",
    "ws": "^8.12.0"
  },
  "type": "module",
  "dependencies": {
    "@vlcn.io/crsqlite": "0.7.2-next.3",
    "@vlcn.io/wa-crsqlite": "0.7.3-next.2",
    "better-sqlite3": "^8.0.1",
    "kysely": "^0.23.4",
    "navigator.locks": "^0.8.6",
    "svelte": "^3.55.1"
  }
}
